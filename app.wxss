/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box; 
} 
.search-movie {
  display: flex;
  width: 100%;
  height: 70rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #e9e9e9;
  margin-bottom: 30rpx;
  align-items: center;
}
.search-icon {
   margin: 0 15rpx; 
}
.search-text {
  color: #888;
  font-size: 28rpx;
  flex-grow: 1;
}
