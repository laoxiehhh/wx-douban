/* pages/search/search.wxss */
page {
  font-size: 28rpx;
  background-color: #f8f8f8;
}
.search-cancel {
  width: 120rpx;
  font-size: 28rpx;
  text-align: center;
}
.search-list {
  width: 100%;
}
.movie-wrapper {
  width: 100%;
  height: 130rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #ccc;
  background-color: #fff;
}
.poster {
  width: 80rpx;
  height: 100rpx;
  margin: 0 30rpx;
}
.total {
  flex-grow: 1;
}
.total .name {
  font-size:30rpx;
  color: #555;
  font-weight: 600; 
  display: block;
}
.total .desc {
  font-size: 24rpx;
  color: #ccc;
}